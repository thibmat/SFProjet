{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="card p-3">
    <div class="card-header w-100  mb-4">
        <div class="row justify-content-between mx-4">
            <h3><span class="badge badge-success">de : {{ message.author.username }}</span></h3>
            <h2>
                <a href="{{ path('message_reply', {'slug':message.annonce.slug, 'id':message.id})}}" class="badge badge-info">
                <img src="{{ asset('img/divers/reply.svg') }}" style="width:30px;height:30px;filter: invert(50%)" title="Repondre">
                </a>
            </h2>
        </div>
    </div>{{ message.annonce.annonceTitre }}
    <p class="text-left">
        Message envoyé le {{ message.createdAt| date('d/m/Y') }}
    </p>
            <h1 class="text-center">{{ message.messageTitre| title }}</h1>
        <div class="row justify-content-center">
            <div class="col-md-11 p-3">
                <div class="card-block px-4">
                    <p class="card-text text-black">{{ message.messageTexte }}</p>
                </div>
            </div>
        </div>

    <div class="row justify-content-around">
        <div class="col-sm-2">
            <a href="{{ path('message_index') }}"><button type="submit" class="btn-primary btn">Retour à la liste</button></a>
        </div>
        <div class="col-sm-10 text-right">
            {{ include('message/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
