{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Envoy√© le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                        <td>
                            {% if not message.isRead %}
                                <strong>
                            {% endif %}
                                {{ message.messageTitre }}
                            {% if not message.isRead %}
                                </strong>
                            {% endif %}
                        </td>
                        <td>
                            {% if not message.isRead %}
                                <strong>
                            {% endif %}
                                {{ message.messageTexte }}
                            {% if not message.isRead %}
                                </strong>
                            {% endif %}
                        </td>
                        <td>
                            {% if not message.isRead %}
                                <strong>
                            {% endif %}
                                {{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s','Europe/Paris') : '' }}
                            {% if not message.isRead %}
                                </strong>
                            {% endif %}
                        </td>
                <td>
                    <a class="card-link btn btn-outline-info" href="{{ path('message_show', {'id': message.id}) }}">Lire</a>
                    {{ include('message/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
