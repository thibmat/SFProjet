{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/registerModal.css">
{% endblock %}
{% block title %}Création compte utilisateur{% endblock %}
{% block body %}
    <div id="registerModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Création compte</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            {{ form_row(registrationForm.userName)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            {{ form_row(registrationForm.userMail)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            {{ form_row(registrationForm.plainPassword)}}
                        </div>
                    </div>
                        <button class="btn btn-primary btn-block btn-lg">S'enregistrer</button>
                    {{ form_end(registrationForm) }}
                </div>
                <div class="modal-footer">
                    <p>Merci de prendre connaissance de nos <a href="#">CGU</a></p>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/registerModal.js') }}"></script>
{% endblock %}




